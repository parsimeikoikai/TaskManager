generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id         Int       @id @default(autoincrement())
  title      String  
  description String
  deadline   DateTime  
  status     TaskStatus 
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}